programa {
  inclua biblioteca Matematica --> mat
  funcao inicio() {
    real nota1, nota2, nota3, media
    escreva("insira sua nota na P1: ")
    leia(nota1)

    escreva("insira sua nota na P2: ")
    leia(nota2)

    escreva("insira sua nota na P3: ")
    leia(nota3)

    media = (nota1 + nota2 + nota3)/3
    
    escreva("\na sua média é: \n", mat.arredondar(media, 2))
    
    se (media >= 6)
    escreva(" APROVADO")

    senao
    escreva (" REPROVADO")

  }
}
