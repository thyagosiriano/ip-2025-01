programa {
      inclua biblioteca Matematica --> mat
  funcao inicio() {
    real salario, reajuste

    escreva("Insira o se salário aqui: ")
    leia(salario)

    se(salario <= 300){
      reajuste = (1 / 2) * salario
      salario = salario + reajuste
    }
    senao{
      reajuste = (3 / 10) * salario
      salario = salario + reajuste
    }
    escreva("SALÁRIO COM REAJUSTE = ", mat.arredondar(salario,2))
  }
}
