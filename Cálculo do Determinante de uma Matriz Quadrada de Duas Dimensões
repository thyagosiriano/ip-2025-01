programa {

  inclua biblioteca Matematica --> mat
  funcao inicio() {

    real a, b, c, d, determinante

    escreva("digite o valor do elemento a: ")
      leia (a)
    escreva("digite o valor do elemento b: ")
      leia (b)
    escreva("digite o valor do elemento c: ")
      leia (c)
    escreva("digite o valor do elemento d: ")
      leia (d)

    determinante = (a * d) - (b * c)

    escreva ("O VALOR DO DETERMINANTE E = ", mat.arredondar(determinante, 2), "\n")
    
  }
}
